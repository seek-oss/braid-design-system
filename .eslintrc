{
  "extends": "seek",
  "overrides": [
    {
      "files": ["*.{js,ts,tsx}"],
      "excludedFiles": [
        "*.{docs,gallery,screenshots,stories}.tsx",
        "site/**/*.{ts,tsx}"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              "braid-design-system**",
              "!braid-design-system/lib/utils/source.macro",
              "braid-src/**",
              "site/**",
              "**/site/**"
            ]
          }
        ]
      }
    }
  ]
}
