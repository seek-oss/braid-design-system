{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/15.4.2/packages/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",
  "npmScope": "braid-design-system",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build:playroom",
          "build:site",
          "generate:component-docs",
          "generate:icons",
          "lint:eslint",
          "lint:prettier",
          "lint:tsc"
        ]
      }
    }
  },
  "affected": {
    "defaultBase": "master"
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  }
}
