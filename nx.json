{
  "extends": "nx/presets/npm.json",
  "npmScope": "seek",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "eslint",
          "format",
          "tsc",
          "generate-icons",
          "generate-component-docs",
          "build-playroom"
        ]
      }
    }
  },
  "targets": {
    "build": ["dist", "codemod"],
    "generate-component-docs": ["componentDocs.json"],
    "generate-icons": ["*Svg.tsx"]
  },
  "targetDependencies": {
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      },
      {
        "target": "generate-icons",
        "projects": "self"
      },
      {
        "target": "generate-component-docs",
        "projects": "self"
      }
    ],
    "tsc": [
      {
        "target": "build",
        "projects": "dependencies"
      },
      {
        "target": "generate-icons",
        "projects": "self"
      },
      {
        "target": "generate-component-docs",
        "projects": "self"
      }
    ],
    "eslint": [
      {
        "target": "build",
        "projects": "dependencies"
      },
      {
        "target": "generate-icons",
        "projects": "self"
      }
    ],
    "format": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "playroom": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "start": [
      {
        "target": "build",
        "projects": "dependencies"
      },
      {
        "target": "generate-component-docs",
        "projects": "self"
      }
    ]
  },
  "affected": {
    "defaultBase": "master"
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  }
}
