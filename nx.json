{
  "extends": "nx/presets/npm.json",
  "npmScope": "braid-design-system",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build-playroom",
          "eslint",
          "format",
          "prettier",
          "generate-component-docs",
          "generate-icons",
          "tsc"
        ]
      }
    }
  },
  "targets": {
    "build": ["dist", "codemod/dist"],
    "generate-component-docs": ["componentDocs.json"],
    "generate-icons": ["*Svg.tsx"],
    "build-site": ["./dist/(!playroom)/**/*", "./dist/*.*"],
    "build-playroom": ["./dist/playroom"]
  },
  "targetDependencies": {
    "build-playroom": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "tsc": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "eslint": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "format": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "prettier": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ]
  },
  "affected": {
    "defaultBase": "master"
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  }
}
