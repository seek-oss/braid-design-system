{
  "extends": "nx/presets/npm.json",
  "npmScope": "seek",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build-playroom",
          "format",
          "generate-component-docs",
          "generate-icons",
          "lint:eslint",
          "lint:prettier",
          "lint:tsc"
        ]
      }
    }
  },
  "targets": {
    "build": ["dist", "codemod/dist"],
    "generate-component-docs": ["componentDocs.json"],
    "generate-icons": ["*Svg.tsx"],
    "build-site": ["./dist/(!playroom)/**/*", "./dist/*.*"],
    "build-playroom": ["./dist/playroom"]
  },
  "targetDependencies": {
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      },
      {
        "target": "generate-icons",
        "projects": "self"
      }
    ],
    "build-site": [
      {
        "target": "build",
        "projects": "dependencies"
      },
      {
        "target": "generate-component-docs",
        "projects": "self"
      }
    ],
    "build-playroom": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "lint:tsc": [
      {
        "target": "build",
        "projects": "dependencies"
      },
      {
        "target": "generate-icons",
        "projects": "self"
      },
      {
        "target": "generate-component-docs",
        "projects": "self"
      }
    ],
    "lint:eslint": [
      {
        "target": "build",
        "projects": "dependencies"
      },
      {
        "target": "generate-icons",
        "projects": "self"
      }
    ],
    "format": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "lint:prettier": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "playroom": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "start-site": [
      {
        "target": "generate-component-docs",
        "projects": "self"
      }
    ]
  },
  "affected": {
    "defaultBase": "master"
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  }
}
