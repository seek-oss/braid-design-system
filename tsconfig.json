{
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["dom", "ES2022"],
    "target": "ES2022",
    "paths": {
      "site/*": ["./site/src/*"],
      "braid-src/*": ["./packages/braid-design-system/src/*"],
      "braid-storybook/*": ["./storybook/*"]
    },
    // This condition enables us to import TS source directly across workspace packages at dev time.
    "customConditions": ["braid-dev"],
    "types": ["vitest/globals"]
  },
  "include": ["./integration", "./storybook", "./scripts", "vitest.config.ts"]
}
