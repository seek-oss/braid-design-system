{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/15.6.3/packages/nx/schemas/project-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*"]
  },
  "targets": {
    "start": {
      "dependsOn": ["start:site", "start:playroom"],
      "executor": "nx:noop"
    },
    "start:site": {
      "dependsOn": ["generate"],
      "executor": "nx:run-script",
      "options": {
        "script": "start:site"
      }
    },
    "start:playroom": {
      "dependsOn": ["generate"],
      "executor": "nx:run-script",
      "options": {
        "script": "start:playroom"
      }
    },
    "build": {
      "dependsOn": ["build:site", "build:playroom"],
      "executor": "nx:noop"
    },
    "build:site": {
      "dependsOn": ["generate"],
      "inputs": ["default", "^default"],
      "outputs": ["dist/(!playroom)/**/*"],
      "executor": "nx:run-script",
      "options": {
        "script": "build:site"
      }
    },
    "build:playroom": {
      "dependsOn": ["generate"],
      "inputs": ["^default"],
      "outputs": ["dist/playroom"],
      "executor": "nx:run-script",
      "options": {
        "script": "build:playroom"
      }
    },
    "generate": {
      "dependsOn": ["generate:component-docs", "^generate:icons"],
      "executor": "nx:noop"
    },
    "generate:component-docs": {
      "inputs": ["^default"],
      "outputs": ["{projectRoot}/componentDocs.json"],
      "executor": "nx:run-script",
      "options": {
        "script": "generate:component-docs"
      }
    },
    "lint": {},
    "lint:tsc": {
      "dependsOn": ["generate"],
      "executor": "nx:run-script",
      "options": {
        "script": "lint:tsc"
      }
    },
    "format": {}
  }
}
